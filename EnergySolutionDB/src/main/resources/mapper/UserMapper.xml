<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.energysolution.mapper.UserMapper">
	
	<insert id="insertUser">
		INSERT INTO User(UserId, Name, Password, Email) VALUES (#{UserId},#{Name},#{Password},#{Email})
	</insert>
	
	<select id="LoginUser" parameterType="String" resultType="com.energysolution.domain.UserDTO">
		SELECT * FROM User WHERE UserId=#{UserId}
	</select>
	
	<select id="FindUserId" parameterType="String" resultType="com.energysolution.domain.UserDTO">
		SELECT * FROM User WHERE Email=#{Email}
	</select>
	
	<select id="FindUserPW" parameterType="hashmap" resultType="com.energysolution.domain.UserDTO">
		SELECT * FROM User WHERE UserId=#{UserId} AND Email=#{Email}
	</select>
	
	<update id="updateUser" parameterType="hashmap">
		UPDATE User SET Password=#{newPW} WHERE UserId=#{UserId} AND Password=#{originPW}
	</update>
	
	<delete id="deleteUser">
		DELETE FROM User WHERE UserId=#{UserId}
	</delete>
	
</mapper>