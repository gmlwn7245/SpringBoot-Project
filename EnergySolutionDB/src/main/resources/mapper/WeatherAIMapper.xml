<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.energysolution.mapper.WeatherAIMapper">
	<insert id="insertWeatherData" parameterType="hashmap">
		INSERT INTO weatherData(T1H, RN1, REH, WSD) VALUES (#{T1H},#{RN1},#{REH},#{WSD})
	</insert>
	<insert id="insertAddress" parameterType="hashmap">
		INSERT INTO address(region1, region2, region3) VALUES (#{region1},#{region2},#{region3})
	</insert>
	
	<select id="getNXNY" resultType="com.energysolution.dto.nxnyDTO">
		SELECT * FROM nxny limit 1
	</select>
	
	<select id="getRealTimeData" resultType="com.energysolution.dto.RealTimeDataDTO">
		SELECT * FROM realTimePredict limit 1
	</select>
	
	<delete id="deleteWeatherData">
		DELETE FROM weatherData
	</delete>
	
	<delete id="deleteAddress">
		DELETE FROM address
	</delete>
	
	<delete id="deleteNXNY">
		DELETE FROM nxny
	</delete>
	
	<delete id="deleteRealTimeData">
		DELETE FROM realtimepredict
	</delete>
</mapper>